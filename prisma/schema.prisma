datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(cuid())
  firstName String
  lastName  String?
  email     String  @unique
  role      Role    @default(CLIENT)
  client    Client? @relation(fields: [clientId], references: [id])
  clientId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
}

enum Role {
  ADMIN
  CLIENT
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Lead {
  id              String       @id @default(cuid())
  name            String
  email           String
  client          Client       @relation(fields: [clientId], references: [id])
  attribution     Attribution?
  meta            Json?
  phone           String?
  budget          String?
  message         String?
  company         String?
  attributionNote String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clientId  String
}

model Client {
  id    String @id @default(cuid())
  name  String @unique
  leads Lead[]
  users User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Attribution {
  ORGANIC
  WORD_OF_MOUTH
  FACEBOOK
  INSTAGRAM
  TWITTER
  LINKEDIN
  GOOGLE
  REFERRAL
  OTHER
}
